@model ILangModel
<div class="container-fluid row">
	<img style = "object-fit: contain" class="col-12 col-lg-3 col-md-4 col-sm-5" src="@Model.get_lang(ViewBag.Lang).ImageLink" />
	<div class="col-12 col-sm-7 col-lg-9 col-md-8 mt-3 bg-dark bg-gradient lang_info_all py-3 px-3">
		<div class="display-4 fw-bold text-center text-info lang_info_title">@Model.get_lang(ViewBag.Lang).Title</div>
		<hr />
		<div class="fs-4 text-left">@Html.Raw(Model.get_lang(ViewBag.Lang).Content)</div>
		<hr />
		<div class="mx-auto fs-3 row text-center container-fluid position-sticky top-100">
			<a class="text-decoration-none lang_info_a me-auto col col-lg-5 col-md-5 bg-primary" href="@Model.get_lang(ViewBag.Lang).Wikilink">Ссылка на Википедию</a>
			<a class="text-decoration-none lang_info_a ms-auto offset-lg-1 offset-md-1 col col-md-6 col-lg-6 bg-primary mt-2 mt-lg-0 mt-md-0" href="@Model.get_lang(ViewBag.Lang).Homelink">Ссылка на Официальную страницу</a>
		</div>
	</div>
</div>
