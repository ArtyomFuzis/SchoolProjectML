@functions
{
    public string? GetActiveState(int val) 
    {
        if (ViewBag.Category == val) return "active";
        return null;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/main.css" />
    <title>@ViewBag.Title</title>
    <link href="~/img/icon.png" rel="shortcut icon" />
</head>
<body>
   <div class="container-fluid" id="head_div">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-decoration-none">
        <div>
            <svg class="bi me-2" width="40" height="40">
                <defs>
                    <filter id="svg_9_blur">
                        <feGaussianBlur stdDeviation="0.1" in="SourceGraphic" />
                    </filter>
                    <filter id="svg_8_blur">
                        <feGaussianBlur stdDeviation="0.1" in="SourceGraphic" />
                    </filter>
                </defs>
                <g>
                    <title>Layer 1</title>
                    <ellipse filter="url(#svg_8_blur)" ry="18" rx="18" id="svg_8" cy="19.42857" cx="20" stroke-width="1.5" stroke="#06bace" fill="#022521" />
                    <text filter="url(#svg_9_blur)" xml:space="preserve" text-anchor="start" font-family="'Trebuchet MS', Gadget, sans-serif" font-size="52" id="svg_9" y="33.42321" x="5.54286" stroke-opacity="null" stroke-width="0.25" stroke="#06bace" fill="#EEEEF5">c</text>
                </g>
            </svg>
        </div>
        <span class="fs-4" id="main_header_text">Какой язык программирования тебе подходит?</span>
      </a>
        <ul class="nav nav-pills">
        <li class="nav-item"><a href="/" class="nav-link @GetActiveState(1)" aria-current="page">Тест</a></li>
        <li class="nav-item"><a href="/main/reses" class="nav-link @GetActiveState(2)">Возможные результаты</a></li>
        <li class="nav-item"><a href="/main/about" class="nav-link @GetActiveState(3)">О сайте</a></li>
      </ul>
    </header>
  </div>
    <main>
    @RenderBody()
    </main>
</body>
</html>
